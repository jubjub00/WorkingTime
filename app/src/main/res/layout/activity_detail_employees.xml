<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.admin.home_admin.DetailEmployees">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/HistoryEmployee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ข้อมูลการทำงาน" />

        <Button
            android:id="@+id/show_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="loading..." />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/spn_month"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:autofillHints="เลือกเดือน"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spn_year"
            android:layout_width="120dp"
            android:autofillHints="เลือกปี"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/show_all"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="ดูทั้งหมด" />
    </TableRow>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycleWorkTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        


    </LinearLayout>
</LinearLayout>