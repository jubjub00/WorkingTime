<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#D3E1F5"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="20dp"

            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/kanit_medium"
            android:text="เหตุผลการขอลา"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/mainLeave"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/kanit_medium"
            android:background="@drawable/bgwhite"
            android:layout_marginEnd="15dp"/>

        <CheckBox
            android:id="@+id/half_day"
            android:layout_width="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="ลาไม่เต็มวัน">

        </CheckBox>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="150dp"
                android:fontFamily="@font/kanit_medium"
                android:text="ตั้งแต่วันที่"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:layout_marginTop="15dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:text="เวลา"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:visibility="invisible"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/kanit_medium">

            <Button
                android:layout_marginRight="105dp"
                android:id="@+id/DayStart"
                android:fontFamily="@font/kanit_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลือกวันที่" />

            <Button
                android:id="@+id/TimeStart"
                android:layout_width="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="เวลา" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="171dp"
                android:fontFamily="@font/kanit_medium"
                android:text="ถึงวันที่"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:text="เวลา"
                android:textColor="#0B0A0A"
                android:textSize="16sp"
                android:visibility="invisible"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_marginRight="105dp"
                android:id="@+id/DayEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:text="เลือกวันที่" />

            <Button
                android:id="@+id/TimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:visibility="invisible"
                android:text="เวลา" />
        </TableRow>

        <EditText
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/LeveDescription"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="@drawable/bgwhite"
            android:ems="10"
            android:gravity="start"
            android:fontFamily="@font/kanit_medium"
            android:hint="รายละเอียดการลา"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rightblue"
            android:fontFamily="@font/kanit_medium"
            android:gravity="center"
            android:text="ส่งเรื่องขอลา"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/add_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"/>




    </LinearLayout>

</ScrollView>