<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลที่อยู่"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textaddpresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ที่อยู่ปัจจุบัน"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/addaddress1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:gravity="top"
                android:hint="ที่อยู่"
                android:inputType="textPersonName|textImeMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addcanton1"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:hint="ตำบล"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addDistrict1"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:enabled="false"

                android:ems="10"
                android:hint="อำเภอ"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addprovince1"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:enabled="false"
                android:hint="จังหวัด"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">
            <AutoCompleteTextView
                android:id="@+id/addcode1"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:enabled="false"
                android:hint="รหัสไปรษณีย์"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textadnationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ที่อยู่ตามทะเบียนบ้าน"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/addaddress2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:gravity="top"
                android:hint="ที่อยู่"
                android:inputType="textPersonName|textImeMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addcanton2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:hint="ตำบล"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">
            <AutoCompleteTextView
                android:id="@+id/addDistrict2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:enabled="false"
                android:hint="อำเภอ"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addprovince2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:enabled="false"
                android:hint="จังหวัด"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/addcode2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/bgwhite"
                android:ems="10"
                android:enabled="false"
                android:hint="รหัสไปรษณีย์"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</ScrollView>